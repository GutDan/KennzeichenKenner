<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="20dp"
        android:height="20dp"
        android:right="4.3dp"
        android:left="4.3dp"
        android:top="4.3dp"
        android:bottom="4.3dp">
<rotate
    android:fromDegrees="45"
    android:pivotX="50%"
    android:pivotY="50%"
    >
<shape>
    android:shape="rectangle" >

    <!-- shape property for the view based on the value particular view would be drawn -->
    <corners
        android:radius="0dp"
        />
    <stroke android:width="5dp"
        android:color="@color/red" />
    <solid android:color="@color/black">

    </solid>
    <!--  stroke for defining a border for view -->


    <!-- size element is used to define a design here height & width are same means square with some radius -->
</shape>
</rotate>
    </item>
</layer-list>
